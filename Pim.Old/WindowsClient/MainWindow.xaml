        xmlns:local="clr-namespace:WindowsClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="337.5" Width="600" WindowStartupLocation="CenterScreen" WindowState="Normal" WindowStyle="None" ResizeMode="NoResize" Background="{x:Null}" AllowsTransparency="True">

    <Border CornerRadius="25">
        <Border.Background>
            <ImageBrush ImageSource="_Data/_Media/_Img/splash-screen-pim.png"/>

        </Border.Background>
        <Grid Margin="107,205,105,106">
            <ProgressBar BorderBrush="CadetBlue"  Name="pbStatus" IsIndeterminate="True" Margin="-107,0,-106,2" Foreground="#FF5A4783" Background="#FFBBBBBB"></ProgressBar>
            <TextBlock Text="LOADING METEORITES" HorizontalAlignment="Center" VerticalAlignment="Center" Height="18" Margin="116,4,130,5" Foreground="#FFBBBBBB" Width="142" TextDecorations="{x:Null}" />
        </Grid>
    </Border>

</Window>
